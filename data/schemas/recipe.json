{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ingredient definition",
    "type": "object",
    "required": [
      "type",
      "ingredients"
    ],
    "additionalPropertis": false,
    "properties": {
        "type": {
          "type": "string",
          "enum": ["BREAKFAST"]
        },
        "ingredients": {
            "type": "object",
            "additionalProperties": false,
            "minProperties": 1,
            "patternProperties": {
                "^[A-Z_]+$": {
                    "type": "object",
                    "additionalPropertis": false,
                    "required": [
                      "quantity",
                      "unit",
                      "min",
                      "max"
                    ],
                    "properties": {
                        "unit": {
                          "type": "string",
                          "enum": ["NATURAL", "GRAM"]
                        },
                        "quantity": {
                          "type": "number",
                          "exclusiveMinimum": 0
                        },
                        "min": {
                          "type": "number",
                          "exclusiveMinimum": 0
                        },
                        "max": {
                          "type": "number",
                          "exclusiveMinimum": 0
                        }
                    }
                }
            }
        }
    }
}
