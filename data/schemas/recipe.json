{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ingredient definition",
    "type": "object",
    "required": [
      "meal",
      "standalone",
      "ingredients"
    ],
    "additionalProperties": false,
    "properties": {
        "meal": {
          "type": "string",
          "enum": ["BREAKFAST", "SNACK"]
        },
        "standalone": {
          "type": "boolean"
        },
        "ingredients": {
            "type": "object",
            "required": ["main"],
            "additionalProperties": false,
            "properties": {
                "main": {"$ref": "def.json#/recipe/ingredients/main"},
                "additional": {"$ref": "def.json#/recipe/ingredients/additional"},
                "technical": {"$ref": "def.json#/recipe/ingredients/technical"}
            }
        }
    }
}
