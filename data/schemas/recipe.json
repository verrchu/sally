{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ingredient definition",
    "type": "object",
    "required": [
      "sufficient",
      "embeddable",
      "ingredients"
    ],
    "additionalProperties": false,
    "properties": {
        "meals": {
          "type": "array",
          "additionalItems": false,
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": ["BREAKFAST", "SNACK", "LUNCH"]
          }
        },
        "sufficient": {
          "type": "boolean"
        },
        "embeddable": {
          "type": "boolean"
        },
        "ingredients": {
            "type": "object",
            "required": ["main"],
            "additionalProperties": false,
            "properties": {
                "main": {"$ref": "def.json#/recipe/ingredients/main"},
                "additional": {"$ref": "def.json#/recipe/ingredients/additional"},
                "technical": {"$ref": "def.json#/recipe/ingredients/technical"}
            }
        },
        "complements": {"$ref": "def.json#/recipe/complements"}
    }
}
