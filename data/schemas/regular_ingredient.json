{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ingredient definition",
  "type": "object",
  "required": [
    "units"
  ],
  "additionalProperties": false,
  "properties": {
    "units": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
          "^(GRAM|NATURAL|TABLESPOON|TEASPOON|MILLILITER)$": {
              "type": "object",
              "type": "object",
              "required": [
                "quantity",
                "characteristics"
              ],
              "additionalProperties": false,
              "properties": {
                "quantity": {
                  "type": "number",
                  "exclusiveMinimum": 0
                },
                "characteristics": {
                  "type": "object",
                  "required": [
                    "calories",
                    "proteins",
                    "fats",
                    "carbohydrates"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "calories": {
                      "type": "number",
                      "minimum": 0
                    },
                    "proteins": {
                      "type": "number",
                      "minimum": 0
                    },
                    "fats": {
                      "type": "number",
                      "minimum": 0
                    },
                    "carbohydrates": {
                      "type": "number",
                      "minimum": 0
                    }
                  }
                }
              }
          }
      }
    }
  }
}
