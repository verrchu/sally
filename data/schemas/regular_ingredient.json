{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ingredient definition",
  "type": "object",
  "required": [
    "units"
  ],
  "additionalProperties": false,
  "properties": {
    "units": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
          "^(GRAM|NATURAL|TABLESPOON|TEASPOON|MILLILITER)$": {
              "type": "object",
              "required": [
                "quantity",
                "characteristics"
              ],
              "additionalProperties": false,
              "properties": {
                "quantity": {"$ref": "def.json#/ingredient_quantity"},
                "characteristics": {"$ref": "def.json#/ingredient_characteristics"}
              }
          }
      }
    }
  }
}
