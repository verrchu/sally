{
  "ingredient": {
    "unit": {
      "type": "string",
      "enum": [
        "NATURAL",
        "GRAM",
        "TABLESPOON",
        "TEASPOON",
        "MILLILITER"
      ]
    },
    "quantity": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "nutritions": {
      "type": "object",
      "required": [
        "calories",
        "proteins",
        "fats",
        "carbohydrates"
      ],
      "additionalProperties": false,
      "properties": {
        "calories": {
          "type": "number",
          "minimum": 0
        },
        "proteins": {
          "type": "number",
          "minimum": 0
        },
        "fats": {
          "type": "number",
          "minimum": 0
        },
        "carbohydrates": {
          "type": "number",
          "minimum": 0
        }
      }
    }
  },
  "recipe": {
    "ingredient": {
      "regular": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "quantity",
          "unit"
        ],
        "properties": {
          "unit": {"$ref": "#/ingredient/unit"},
          "quantity": {"$ref": "#/ingredient/quantity"}
        }
      },
      "any_quantity": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "quantity"
        ],
        "properties": {
          "quantity": {
            "type": "string",
            "enum": ["ANY"]
          }
        }
      }
    },
    "ingredients": {
      "main": {
        "type": "object",
        "additionalProperties": false,
        "minProperties": 1,
        "patternProperties": {
            "^[A-Z_]+$": {"$ref": "#/recipe/ingredient/regular"}
        }
      },
      "additional": {
        "type": "object",
        "additionalProperties": false,
        "minProperties": 1,
        "patternProperties": {
          "^[A-HJKMNP-TV-Z0-9]{26}$": {
            "type": "object",
            "additionalProperties": false,
            "minProperties": 1,
            "patternProperties": {
              "^[A-Z_]+$": {"$ref": "#/recipe/ingredient/regular"}
            }
          }
        }
      },
      "technical": {
        "type": "object",
        "additionalProperties": false,
        "minProperties": 1,
        "patternProperties": {
          "^[A-Z_]+$": {
            "oneOf": [
              {"$ref": "#/recipe/ingredient/regular"},
              {"$ref": "#/recipe/ingredient/any_quantity"}
            ]
          }
        }
      }
    },
    "complements": {
      "type": "object",
      "additionalProperties": false,
      "minProperties": 1,
      "patternProperties": {
        "^[A-HJKMNP-TV-Z0-9]{26}$": {
          "type": "object",
          "additionalProperties": false,
          "minProperties": 1,
          "patternProperties": {
            "^[A-Z_]+$": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "additional_ingredients"
              ],
              "properties": {
                "additional_ingredients": {
                  "oneOf": [
                    {"type": "string", "pattern": "^[A-HJKMNP-TV-Z0-9]{26}$"},
                    {"type": "null"}
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}
